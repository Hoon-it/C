#include <iostream> //cout, cin, endl;
#include <cstdio> //printf

using namespace std;  //std::cout에서 std::를 안 써도 된다.

int main()
{
  int x = 1024;
  double pi = 3.141592;
  
  cout << "hello"; // std::endl; //endl;가 없으면 한 줄로 출력된다. (\n : new line)
  cout << " x is " << x << " pi is " << pi << std::endl;  //endl;가 있으면 두줄로 출력한다.
  
  std::cout << "abc" << "\t" << "def" << std::endl; // \t는 오른쪽 줄 맞춤을 해준다.
  std::cout << "ab" << "\t" << "cdef" << std::endl; // \t는 오른쪽 줄 맞춤을 해준다.
  
  cout << "\a"; //audio sound
  return 0;
}

//////////////////////////////////////////


int main()
{
  using namespace std;
  
  int x = 1;
  
  //정수가 가질 수 있는 가장 큰 수는 2147483647이다.
  //입력을 받기 전에는 x가 1이었다.
  cout << "before your input, x was " << x << endl;
  cin >> x;
  
  cout << "your input is " << x << endl;
  
  return 0;
}
